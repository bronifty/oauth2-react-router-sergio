{
	"extends": "@total-typescript/tsconfig/bundler/dom/app",
	"include": [
		"app/**/*.ts",
		"app/**/*.tsx",
		".react-router/types/**/*",
		"react-router.config.ts"
	],
	"compilerOptions": {
		"target": "ES2024",
		"types": ["node", "vite/client"],
		"rootDirs": [".", "./.react-router/types"],
		"jsx": "react-jsx",
		"paths": {
			"~/*": ["./app/*"]
		}
	}
}
